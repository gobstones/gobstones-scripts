{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2022",
        "rootDir": "src",
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "/dist/typings",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "stripInternal": true,
        "composite": false,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*"]
}
